    /* Heading style */
    h1 {
        text-align: center;
        font-size: 24px;
        color: #333;
        margin-bottom: 20px;
    }

    /* Paragraph label style */
    p {
        margin: 10px 0 5px;
        font-size: 14px;
        color: #555;
    }

    /* Input field styling */
    input[type="text"],
    input[type="password"] {
        width: 100%;
        padding: 10px;
        font-size: 14px;
        border: 1px solid #ccc;
        border-radius: 4px;
        margin-bottom: 20px;
    }

    /* Submit button styling */
    input[type="submit"] {
        width: 100%;
        padding: 10px;
        font-size: 16px;
        background-color: #4CAF50;
        color: white;
        border: none;
        border-radius: 4px;
        cursor: pointer;
        transition: background-color 0.3s ease;
    }

        /* Submit button hover effect */
        input[type="submit"]:hover {
            background-color: #45a049;
        }
</style>

<div class="container">
    <form method="post">
        <div class="form">
            <input type="text" name="username" id="username" placeholder="Enter username" />
            <input type="password" name="password" id="password" placeholder="Enter password" />
            <input type="submit" value="Login"/>
        </div>
    </form>
</div>
