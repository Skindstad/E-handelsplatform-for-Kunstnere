@page
@model EhandelsplatformforKunstnere.Pages.BasketModel
@{
    ViewData["Title"] = "Kruv";
}

<style>
    body {
        background: linear-gradient(135deg, #ececec 25%, #ffffff 75%);
        font-family: 'Arial', sans-serif;
    }

    .basket-container {
        background-color: #2c3e50; /* Cool navy blue background */
        color: white; /* White text for contrast */
        padding: 30px;
        border-radius: 8px;
        box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
        margin: 50px auto;
    }

    .basket-item {
        border-bottom: 1px solid #bdc3c7; /* Light grey border */
        padding: 15px 0;
    }

        .basket-item:last-child {
            border-bottom: none;
        }

        .basket-item img {
            width: 80px;
            height: 80px;
            border-radius: 8px;
        }

        .basket-item h5 {
            margin: 0 0 5px;
            color: #ecf0f1; /* Light grey text */
        }

    .basket-total {
        font-size: 1.2rem;
        font-weight: bold;
        text-align: right;
        color: #ecf0f1; /* Light grey text */
    }

    .btn-checkout {
        background-color: #f39c12; /* Bright orange button */
        border: none;
        color: white;
        font-weight: bold;
    }

        .btn-checkout:hover {
            background-color: #e67e22; /* Darker orange on hover */
        }

    .quantity-input {
        width: 60px;
        padding: 5px;
        border-radius: 4px;
        border: 1px solid #ccc;
        text-align: center;
    }

    .btn-delete {
        background-color: #e74c3c; /* Red delete button */
        color: white;
        border: none;
        padding: 5px 10px;
        font-size: 0.9rem;
        border-radius: 4px;
        cursor: pointer;
    }

        .btn-delete:hover {
            background-color: #c0392b; /* Darker red on hover */
        }
</style>

<div class="container">
    <div class="basket-container">
        <h3 class="text-center">Your Shopping Basket</h3>

        <!-- Basket Item -->
        <div class="basket-item row align-items-center">
            <div class="col-2">
                <img src="https://savethefrogs.com/wp-content/uploads/placeholder-1-2.png" alt="Product Image">
            </div>
            <div class="col-4">
                <h5>Product Name 1</h5>
                <p>$25.00</p>
            </div>
            <div class="col-2">
                <input type="number" class="quantity-input" value="1" min="1">
            </div>
            <div class="col-2 text-right">
                <span>$25.00</span>
            </div>
            <div class="col-2 text-right">
                <button class="btn-delete">X</button>
            </div>
        </div>

        <!-- Basket Item -->
        <div class="basket-item row align-items-center">
            <div class="col-2">
                <img src="https://savethefrogs.com/wp-content/uploads/placeholder-1-2.png" alt="Product Image">
            </div>
            <div class="col-4">
                <h5>Product Name 2</h5>
                <p>$15.00</p>
            </div>
            <div class="col-2">
                <input type="number" class="quantity-input" value="2" min="1">
            </div>
            <div class="col-2 text-right">
                <span>$30.00</span>
            </div>
            <div class="col-2 text-right">
                <button class="btn-delete">X</button>
            </div>
        </div>

        <!-- Basket Total -->
        <div class="basket-total mt-3">
            Total: $55.00
        </div>

        <!-- Checkout Button -->
        <div class="text-center mt-4">
            <button class="btn btn-checkout btn-lg">Proceed to Checkout</button>
        </div>
    </div>
</div>
