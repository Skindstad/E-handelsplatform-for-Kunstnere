@page
@model E_handelsplatform_for_Kunstnere.Pages.Profile.ForumModel
@{
}
<partial name="_Profile" />

<style>
    body {
        background: linear-gradient(135deg, #ececec 25%, #ffffff 75%);
        font-family: 'Arial', sans-serif;
    }

    .left-side {
        background-color: #f7f3e9;
        padding: 50px;
        min-height: 100vh;
        border-right: 5px solid #f4f1dc;
    }

    .profile-section {
        text-align: center;
        margin-bottom: 30px;
    }

    .profile-avatar {
        width: 120px;
        height: 120px;
        border-radius: 50%;
        object-fit: cover;
        margin-bottom: 10px;
        box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
    }

    .profile-name {
        font-size: 1.8rem;
        font-weight: bold;
        color: #bf3030;
        margin-bottom: 5px;
    }

    .profile-bio {
        font-size: 0.9rem;
        color: #6c757d;
        margin-bottom: 20px;
    }

    .recent-images {
        margin-top: 20px;
    }

        .recent-images h5 {
            color: #bf3030;
            margin-bottom: 15px;
        }

    .image-grid {
        display: grid;
        grid-template-columns: repeat(3, 1fr);
        gap: 10px;
    }

        .image-grid img {
            width: 100%;
            height: 100px;
            object-fit: cover;
            border-radius: 8px;
            box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
            cursor: pointer;
            transition: transform 0.3s ease;
        }

            .image-grid img:hover {
                transform: scale(1.05);
            }

    .right-side {
        background-color: #fafafa;
        padding: 20px;
        min-height: 100vh;
    }

    .dummy-post {
        background: #ffe3e3;
        border: 2px solid #ffacac;
        padding: 20px;
        margin-bottom: 20px;
        border-radius: 12px;
        box-shadow: 0px 4px 6px rgba(0, 0, 0, 0.1);
    }

    .dummy-post-title {
        font-size: 1.5rem;
        font-weight: bold;
        color: #bf3030;
        margin-bottom: 10px;
        border-bottom: 2px solid #ffacac;
        padding-bottom: 5px;
    }

    .post-meta {
        font-size: 0.9em;
        color: #6c757d;
        margin-bottom: 15px;
    }

    .comment-section {
        margin-top: 15px;
        padding: 15px;
        background-color: #f7f3e9;
        border: 2px solid #e9dcc9;
        border-radius: 10px;
    }

        .comment-section h6 {
            color: #a65252;
        }

        .comment-section .comment {
            border-bottom: 1px solid #e9dcc9;
            padding: 10px 0;
            margin-bottom: 10px;
        }

            .comment-section .comment:last-child {
                border-bottom: none;
            }

            .comment-section .comment strong {
                color: #963939;
            }

    .btn-outline-primary {
        border-color: #bf3030;
        color: #bf3030;
    }

        .btn-outline-primary:hover {
            background-color: #bf3030;
            color: #fff;
        }

    .modal-content {
        border-radius: 15px;
        box-shadow: 0px 4px 8px rgba(0, 0, 0, 0.2);
    }

    .modal-header {
        background-color: #ffe3e3;
        border-bottom: 2px solid #ffacac;
    }

    .modal-footer {
        border-top: 2px solid #ffacac;
    }

    .btn-primary {
        background-color: #bf3030;
        border-color: #bf3030;
    }

        .btn-primary:hover {
            background-color: #a62a2a;
            border-color: #a62a2a;
        }

    /* Modal for Enlarged Image */
    .image-modal {
        display: flex;
        align-items: center;
        justify-content: space-between;
    }

        .image-modal img {
            max-width: 100%;
            height: auto;
            border-radius: 12px;
        }

        .image-modal .description {
            margin-left: 20px;
            flex-grow: 1;
        }

        .image-modal .comment-section {
            margin-top: 10px;
        }
</style>
<div class="container-fluid vh-100">
    <div class="row h-100">
        <!-- Left Side (Smaller Section with Profile and Images) -->
        <div class="col-lg-4 col-md-5 col-sm-12 left-side">
            <!-- Profile Section -->
            <div class="profile-section">
                <img src="https://via.placeholder.com/120" alt="Profile Avatar" class="profile-avatar">
                <div class="profile-name">Jane Doe</div>
                <div class="profile-bio">Creative designer and art lover. Sharing my journey through visuals and experiences. Stay tuned!</div>
            </div>

            <!-- Recent Images Section -->
            <div class="recent-images">
                <h5>Recent Images</h5>
                <div class="image-grid">
                    <img src="https://savethefrogs.com/wp-content/uploads/placeholder-1-2.png" alt="Image 1" data-bs-toggle="modal" data-bs-target="#imageModal" onclick="openImageModal('https://savethefrogs.com/wp-content/uploads/placeholder-1-2.png', 'Image 1 Description')">
                    <img src="https://savethefrogs.com/wp-content/uploads/placeholder-1-2.png" alt="Image 2" data-bs-toggle="modal" data-bs-target="#imageModal" onclick="openImageModal('https://savethefrogs.com/wp-content/uploads/placeholder-1-2.png', 'Image 2 Description')">
                    <img src="https://savethefrogs.com/wp-content/uploads/placeholder-1-2.png" alt="Image 3" data-bs-toggle="modal" data-bs-target="#imageModal" onclick="openImageModal('https://savethefrogs.com/wp-content/uploads/placeholder-1-2.png', 'Image 3 Description')">
                    <img src="https://savethefrogs.com/wp-content/uploads/placeholder-1-2.png" alt="Image 4" data-bs-toggle="modal" data-bs-target="#imageModal" onclick="openImageModal('https://savethefrogs.com/wp-content/uploads/placeholder-1-2.png', 'Image 4 Description')">
                    <img src="https://savethefrogs.com/wp-content/uploads/placeholder-1-2.png" alt="Image 5" data-bs-toggle="modal" data-bs-target="#imageModal" onclick="openImageModal('https://savethefrogs.com/wp-content/uploads/placeholder-1-2.png', 'Image 5 Description')">
                    <img src="https://savethefrogs.com/wp-content/uploads/placeholder-1-2.png" alt="Image 6" data-bs-toggle="modal" data-bs-target="#imageModal" onclick="openImageModal('https://savethefrogs.com/wp-content/uploads/placeholder-1-2.png', 'Image 6 Description')">
                </div>
            </div>
        </div>

        <!-- Right Side (Larger Section with Posts and Comments) -->
        <div class="col-lg-8 col-md-7 col-sm-12 right-side">
            <!-- Full-Width Modal Button at the Top -->
            <button type="button" class="btn btn-primary btn-lg w-100 mb-4" data-bs-toggle="modal" data-bs-target="#postFormModal">
                Create Post
            </button>

            <!-- Dummy Posts Section -->
            <div id="postsSection">
                <!-- Dummy Post 1 -->
                <div class="dummy-post">
                    <div class="dummy-post-title">Creative Post Title 1</div>
                    <div class="post-meta">
                        Posted by <strong>John Doe</strong> on <em>October 1, 2024</em>
                    </div>
                    <p>This is a dummy post content showcasing how the post will look once created. Enjoy the creative vibe!</p>

                    <!-- Comment Section for Post 1 -->
                    <div class="comment-section">
                        <h6>Comments</h6>
                        <!-- Example Comment -->
                        <div class="comment">
                            <strong>User2</strong> - <em>October 2, 2024</em>
                            <p>This is a creatively designed comment on the post.</p>
                        </div>
                        <div class="comment">
                            <strong>User3</strong> - <em>October 3, 2024</em>
                            <p>Another creative comment on the post.</p>
                        </div>
                        <!-- Add Comment Button -->
                        <button class="btn btn-sm btn-outline-primary" data-bs-toggle="modal" data-bs-target="#commentModal">Reply</button>
                    </div>
                </div>

                <!-- Dummy Post 2 -->
                <div class="dummy-post">
                    <div class="dummy-post-title">Creative Post Title 2</div>
                    <div class="post-meta">
                        Posted by <strong>John Doe</strong> on <em>October 2, 2024</em>
                    </div>
                    <p>This is another dummy post. Explore the unique design elements here!</p>

                    <!-- Comment Section for Post 2 -->
                    <div class="comment-section">
                        <h6>Comments</h6>
                        <!-- Example Comment -->
                        <div class="comment">
                            <strong>User4</strong> - <em>October 3, 2024</em>
                            <p>A comment on this post.</p>
                        </div>
                        <button class="btn btn-sm btn-outline-primary" data-bs-toggle="modal" data-bs-target="#commentModal">Reply</button>
                    </div>
                </div>

                <!-- Dummy Post 3 -->
                <div class="dummy-post">
                    <div class="dummy-post-title">Creative Post Title 3</div>
                    <div class="post-meta">
                        Posted by <strong>John Doe</strong> on <em>October 3, 2024</em>
                    </div>
                    <p>Another creative post example. All posts have a similar artistic design.</p>

                    <!-- Comment Section for Post 3 -->
                    <div class="comment-section">
                        <h6>Comments</h6>
                        <button class="btn btn-sm btn-outline-primary" data-bs-toggle="modal" data-bs-target="#commentModal">Reply</button>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Modal for Creating a Post -->
<div class="modal fade" id="postFormModal" tabindex="-1" aria-labelledby="postFormModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="postFormModalLabel">Create a New Post</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <form id="postForm">
                    <!-- Title Field -->
                    <div class="mb-3">
                        <label for="postTitle" class="form-label">Post Title</label>
                        <input type="text" class="form-control" id="postTitle" placeholder="Enter the title" required>
                    </div>

                    <!-- Text Field -->
                    <div class="mb-3">
                        <label for="postText" class="form-label">Post Text</label>
                        <textarea class="form-control" id="postText" rows="3" placeholder="Write your post" required></textarea>
                    </div>

                    <!-- Image/File Upload -->
                    <div class="mb-3">
                        <label for="postFile" class="form-label">Upload Image or File (optional)</label>
                        <input type="file" class="form-control" id="postFile" accept="image/*, .pdf, .doc">
                    </div>
                </form>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
                <button type="submit" class="btn btn-primary" form="postForm">Submit Post</button>
            </div>
        </div>
    </div>
</div>

<!-- Modal for Adding a Comment -->
<div class="modal fade" id="commentModal" tabindex="-1" aria-labelledby="commentModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="commentModalLabel">Add a Comment</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <form id="commentForm">
                    <!-- Comment Text Field -->
                    <div class="mb-3">
                        <label for="commentText" class="form-label">Your Comment</label>
                        <textarea class="form-control" id="commentText" rows="3" placeholder="Write your comment" required></textarea>
                    </div>
                </form>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
                <button type="submit" class="btn btn-primary" form="commentForm">Submit Comment</button>
            </div>
        </div>
    </div>
</div>

<!-- Bootstrap JS (for modal functionality) -->
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/js/bootstrap.bundle.min.js"></script>

<script>
    function openImageModal(imageUrl, description) {
        document.getElementById('modalImage').src = imageUrl;
        document.getElementById('modalDescription').innerText = description;
    }
</script>
