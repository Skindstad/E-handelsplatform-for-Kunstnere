@page
@model GalleryModel

@{
    ViewData["Title"] = "Gallery";
}

@section Scripts {
<script>
    getSuggestions = () => {
        return @Html.Raw(Model.SearchArray);
    };

    onSelect = (s) => {
        const items = document.querySelectorAll(".container>.item");
        items.forEach((item) => {
            const title = item.querySelector(".title").innerText.trim().toLowerCase();
            if (s === "" || title.startsWith(s.toLowerCase())) {
                item.style.display = "flex";
            } else {
                item.style.display = "none";
            }
        })
    };

</script>
}

<partial name="/Views/Shared/Gallery.cshtml" model="@Model.Items"></partial>
